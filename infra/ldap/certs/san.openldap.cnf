[req]
default_bits       = 2048
prompt             = no
default_md         = sha256
distinguished_name = dn
req_extensions     = req_ext

[dn]
C  = BR
ST = RioGrandeDoSul
L  = PortoAlegre
O  = MyCompany
OU = IT
CN = openldap

[req_ext]
subjectAltName = @alt_names
extendedKeyUsage = serverAuth, clientAuth
keyUsage = critical, digitalSignature, keyEncipherment

[alt_names]
DNS.1 = host.docker.internal
DNS.2 = openldap
DNS.3 = localhost
IP.1  = 127.0.0.1